@model IEnumerable<prj_MVC_core.Models.CPhotoWrap>

@{
    ViewData["Title"] = "List";
}

<h1>圖片清單</h1>
@using (Html.BeginForm())
{
    @:關鍵字 @Html.TextBox("txtKeyword")
    <input type="submit" value="查詢" class="btn btn-primary">
}
<p>
    <a asp-action="Create">新增圖片</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
               序
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FDate)
            </th>
            <th>
               
                @Html.DisplayNameFor(model => model.FDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FOwnerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FDate)
            </td>
            <td>
                
                @Html.DisplayFor(modelItem => item.FDescription)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.FOwnerId)
            </td>
            <td>
                <img src="~/imgs/@item.FImage" height="80" width="90" />
            </td>
            <td>
                    @Html.ActionLink("編輯", "Edit", new { id = item.Fid }) |
                    @Html.ActionLink("刪除", "Delete", "Photo", new { id = item.Fid }, new { onclick = "return confirm('確定要刪除嗎?')" })
            </td>
        </tr>
}
    </tbody>
</table>
